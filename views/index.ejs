<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <!-- STYLES -->
    <%- include ('./partials/head.ejs') %>
    <meta charset="utf-8">
    <title>florist</title>
    <!-- -->
  </head>
  <body>
    <%- include ('./partials/header.ejs') %>
    <div class="flower xyz-in" xyz="fade duration-20 ease-in" id="flowers">
      <% for (let flower of flowers) { %>
        <div class="" id="flower-item">
          <a href="/flora/<%=flower._id%>"><img src="<%=flower.img%>" id="img-index" height=400px width=300px alt="flower image"></a>
          <h2><%=flower.name%></h2>
          <button type="button" id="flower-btn">
          <a href="/flora/<%=flower._id%>">more info</a>
        </div>
      <%}%>
  </body>
</html>
